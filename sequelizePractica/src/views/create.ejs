<!DOCTYPE html>
<html lang="es">
<%- include('partials/head', { css:'style' } ) %> 
<body>
    <!-- header -->
    <%- include('partials/header') %> 
    <!-- /header --> 
    <div class="col-12">
        <h2>Carga tu nueva pelicula</h2>
    </div>

    <section class="section__movieCreate"> 
        <form action="/movies/create" method="POST">
            <div class="div__movieCreate">
                <label for="title" class="form__label">Titulo de la pelicula:</label>
                <input type="text" id="title" name="title" placeholder="Ej: Rescatando al soldado Ryan" class="form__input">
            </div>
            <div class="div__movieCreate">
                <label for="rating" class="form__label">Rating:</label>
                <input type="text" id="rating" name="rating" placeholder="Ej: 10" class="form__input">
            </div>
            <div class="div__movieCreate">
                <label for="awards" class="form__label">Premios:</label>
                <input type="text" id="awards" name="awards" placeholder="Ej: 4" class="form__input">
            </div>
            <div class="div__movieCreate">
                <label for="release_date" class="form__label">Fecha de estreno:</label>
                <input type="date" name="release_date" >
            </div>
            <div class="div__movieCreate">
                <label for="length" class="form__label">Duración:</label>
                <input type="text" id="length" name="length" placeholder="Ej: 160" class="form__input">
            </div>
            <div class="div__movieCreate">
                <label for="genre_id" class="form__label">Género:</label>
                <select name="genre_id">
                    <% generos.forEach(genero => { %> 
                    <option value="<%= genero.id %>"><%= genero.name %> </option>
                    <% }) %>
                </select>
            </div>
            
            <div class="div__buttonCreate">
                <button type="submit" class="buy__now__button">Crear pelicula</button>
            </div>
            <div class="div__buttonReset">
                <button type="reset" class="button__reset">Limpiar campos</button>
            </div>
        </form>
    </section>    
</body>
</html>